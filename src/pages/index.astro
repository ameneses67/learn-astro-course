---
import BaseLayout from "@layouts/BaseLayout.astro";

import BlogCard from "@components/BlogCard.astro";
import Heading from "@components/Heading.astro";

import data from "@data/blogCardData.json";

export type BlogCard = {
	imageSrc: string;
	imageAlt: string;
	category: string;
	title: string;
	description: string;
	headshotSrc: string;
	headshotAlt: string;
	name: string;
	date: string;
};
---

<BaseLayout title="Learn Astro Course">
	<Heading
		tagName="h1"
		size="h1"
		align="center"
	>
		Module 1
	</Heading>
	<div
		class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 justify-items-center items-stretch gap-x-4 gap-y-12 max-w-5xl mx-auto"
	>
		{data.map((card) => <BlogCard data={card} />)}
	</div>
</BaseLayout>
