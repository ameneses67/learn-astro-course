---
import BaseLayout from "../layouts/BaseLayout.astro";

import Card from "../components/Card.astro";
import Heading from "../components/Heading.astro";

import cardData from "../data/blogCardData.json";
---

<BaseLayout title="Learn Astro Course">
	<Heading
		tagName="h1"
		size="h1"
		align="center"
	>
		Module 1
	</Heading>
	<div
		class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 justify-items-center items-stretch gap-x-4 gap-y-12 max-w-5xl mx-auto"
	>
		{
			cardData.map((el) => (
				<Card
					imageSrc={el.imageSrc}
					imageAlt={el.imageAlt}
					category={el.category}
					title={el.title}
					description={el.description}
					headshotSrc={el.headshotSrc}
					headshotAlt={el.headshotAlt}
					name={el.name}
					date={el.date}
				/>
			))
		}
	</div>
</BaseLayout>
