---
import { type HTMLAttributes } from "astro/types";

const headingOptions = {
	h1: "text-7xl",
	h2: "text-6xl",
	h3: "text-5xl",
	h4: "text-4xl",
	h5: "text-3xl",
	h6: "text-2xl",
};

interface Props extends HTMLAttributes<keyof typeof headingOptions> {
	tagName: keyof typeof headingOptions;
	size: keyof typeof headingOptions;
	centered?: boolean;
	hclasses?: string;
	classes?: string;
}

const { tagName, size, centered, hclasses, classes, ...rest } = Astro.props;
const Tag = tagName;
---

<div
	class:list={["text-xl space-y-4", { "text-center": centered }, classes]}
	{...rest}
>
	<Tag class:list={["leading-[1.1] font-bold", headingOptions[size], hclasses]}>
		<slot />
	</Tag>
	<slot name="subtitle" />
</div>
